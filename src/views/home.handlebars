<div class="home">
  <h1 class="home-title">HOME</h1>
  <p class="home-description">Esta es la secci√≥n principal de productos.</p>

  {{!-- Iteramos los productos y los mostramos si tienen estado activo --}}
  <div class="product-grid">
    {{#if products}}
      {{#each products}}
        <div class="product-card">
          <div class="product-header">
            <h2 class="product-title">{{this.title}}</h2>
            <span class="product-category">{{this.category}}</span>
          </div>
  
          <p class="product-description">{{this.description}}</p>
  
          <div class="product-info">
            <span class="product-price">$ {{this.price}}</span>
            <span class="product-stock">Stock: {{this.stock}}</span>
          </div>
  
          <div class="product-data">
            <h3 class="product-code">Codigo: {{this.code}}</h3>
            <span class="product-id" hidden>{{this._id}}</span>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
  
  <div class="pagination">
    {{#each links}}
      <a href="{{this.link}}" class="page-link">{{this.text}}</a>
    {{/each}}
  </div>

</div>

<script src="/js/home.js"></script>